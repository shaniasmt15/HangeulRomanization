<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_train"
    tools:context=".TrainingActivity">

    <LinearLayout
        android:id="@+id/trainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">


        <ProgressBar
            android:id="@+id/trainingProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress" />

        <TextView
            android:id="@+id/trainingInfoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Sedang proses pelatihan"
            android:gravity="center"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/trainingInfoTxt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silahkan menunggu"
            android:gravity="center"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>